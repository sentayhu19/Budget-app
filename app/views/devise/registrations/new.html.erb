 <%= render 'layouts/nav2' %>
 <section class="login-form">
<h2 class="text-center">REGISTER</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="d-flex flex-column align-items-center">
 <div class= "d-flex flex-column align-items-center w-75 mb-3">

    <%= f.text_field :full_name, autofocus: true, placeholder: "Full Name", :class => "form-control w-75 mb-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => "form-control w-75 mb-3" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)", :class => "form-control w-75 mb-3" %>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control w-75 mb-3" %>
 

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  </div>
  </div>
<% end %>
<div class="text-center">
<%= render "devise/shared/links" %>
</div>
</section>
