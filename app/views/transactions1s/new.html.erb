<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<%= form_with(model: @transactions1) do |form| %>
  <section class="container">
    <div class="my-3">
      <%= form.text_field :name, class: "text-input", placeholder: "Name" %>
    </div>

    <div>
      <%= form.text_field :amount, class: "text-input", placeholder: "Amount" %>
    </div>

    <h3 class="mt-3">Categories</h3>
    <% @categories.each do |category| %>
      <%= label_tag category.name %>
      <%= check_box_tag "categories[#{category.id}]", category.name %>
      <br />
    <% end %>
  </section>

  <div class="bottom-container position-fixed bottom-0 w-100 btn-bg">
    <div class="inner-bottom-container text-center">
      <%= form.submit "Add Transaction", class: "bottom-btn new-btn btn-bg ad-tran" %>
    </div>
  </div>
<% end %>